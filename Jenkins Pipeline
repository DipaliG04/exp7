pipeline {
    agent any

    tools {
        maven 'MAVEN'  // Ensure this matches the Maven name in Jenkins
    }

    environment {
        PATH = "${tool 'MAVEN'}/bin:${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/DipaliG04/exp7.git'
            }
        }

        stage('Build') {
            steps {
                dir('selenium-tests') {
                    sh 'mvn clean package -DdriversPath=${driversPath}'
                }
            }
        }
    }
}

